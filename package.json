{
	"name": "artisan",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bunx --bun vite dev",
		"build": "bunx --bun vite build",
		"preview": "bunx --bun vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"cfl": "pnpm check && pnpm format && pnpm lint",
		"db:generate": "bunx drizzle-kit generate --dialect postgresql --schema ./src/lib/server/schema.ts --out ./migrations",
		"db:migrate": "bun run migrations/migrate.ts"
	},
	"dependencies": {
		"@ai-sdk/svelte": "^3.0.56",
		"@ai-sdk/valibot": "^1.0.10",
		"@fal-ai/client": "^1.6.2",
		"@humanspeak/svelte-markdown": "^0.8.12",
		"@openrouter/ai-sdk-provider": "^1.2.0",
		"ai": "^5.0.56",
		"better-auth": "^1.3.23",
		"redis": "^5.8.2",
		"resumable-stream": "^2.2.4",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@iconify-json/hugeicons": "^1.2.17",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/kit": "^2.43.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.13",
		"@types/bun": "^1.2.23",
		"bits-ui": "^2.11.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.5",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.6",
		"svelte-adapter-bun": "^1.0.0",
		"svelte-bricks": "^0.3.2",
		"svelte-check": "^4.3.2",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"unplugin-icons": "^22.3.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0"
	}
}
