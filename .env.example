# Database Configuration
# PostgreSQL connection string for Drizzle ORM
DATABASE_URL="postgres://user:password@host:port/db-name"

# Redis Configuration
# Redis connection string for resumable streams and caching
REDIS_URL="redis://localhost:6379"

# AI Service Configuration
# OpenRouter API key for LLM access (get from https://openrouter.ai)
OPENROUTER_API_KEY="sk-or-v1-..."

# fal.ai API key for media generation (get from https://fal.ai)
FAL_API_KEY="..."

# S3-Compatible Storage Configuration
# S3 endpoint (e.g., https://s3.amazonaws.com or compatible service)
S3_ENDPOINT="https://s3.amazonaws.com"

# S3 region (e.g., us-east-1)
S3_REGION="us-east-1"

# S3 access credentials
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"

# S3 bucket name for media storage
S3_BUCKET="your-bucket-name"

# Application Configuration
# Base URL of your application (used for auth callbacks and media file serving)
# Media files are served through /m/* endpoint with aggressive caching
PUBLIC_BASE_URL="http://localhost:5173"

# Authentication Configuration
# Secret key for better-auth (generate with: openssl rand -base64 32)
AUTH_SECRET="your-random-secret-key-here"

# Google OAuth Configuration
# Get credentials from https://console.cloud.google.com
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
